<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="54dp"
        android:layout_height="43dp"
        android:layout_margin="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:contentDescription="TODO"
        app:barrierDirection="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/netology_pic"
        tools:ignore="ContentDescription,HardcodedText" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:barrierDirection="bottom"
        app:constraint_referenced_ids="date_news,avatar,title_news,menu_news"

        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="59dp" />


    <TextView
        android:id="@+id/title_news"
        android:layout_width="274dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Нетология. Университет интернет-профессий будущего"

        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menu_news"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"

        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@+id/title_news"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_more_vert_24"
        tools:ignore="MissingConstraints"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/news"
        android:layout_width="380dp"
android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Привет, это новая Нетология! Когда-то Нетология начиналась с интенсивов по онлайн-маркетингу. Затем появились курсы по дизайну, разработке, аналитике и управлению. Мы меняемся сами и помогаем меняться студентам: расти от новичков до уверенных профессионалов.  Но самое важное остаётся — наша вера в то, что в каждом заложена сила, которая заставляет хотеть больше, целиться выше, бежать быстрее. А наша миссия — помочь выбрать путь и начать цепочку перемен → http://netolo.gy/fyb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="36dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/count_like"
        app:layout_constraintTop_toTopOf="@+id/count_like"
        app:srcCompat="@drawable/ic_baseline_share_24"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/visio"
        android:layout_width="36dp"
        android:layout_height="25dp"
        android:layout_marginStart="124dp"
        app:layout_constraintStart_toEndOf="@+id/share_news"
        app:layout_constraintTop_toTopOf="@+id/share_news"
        app:srcCompat="@drawable/ic_baseline_visibility_24"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/count_like"
        android:layout_width="46dp"
        android:layout_height="25dp"
        android:text="10"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/like"
        app:layout_constraintTop_toTopOf="@+id/like" />

    <TextView
        android:id="@+id/share_news"
        android:layout_width="36dp"
        android:layout_height="25dp"
        android:text="5"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/share"
        app:layout_constraintTop_toTopOf="@+id/share" />

    <TextView
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:text="1000"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/visio"
        app:layout_constraintTop_toTopOf="@+id/visio" />

    <ImageView
        android:id="@+id/like"
        android:layout_width="36dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/news"
        app:srcCompat="@drawable/ic_baseline_favorite_24"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/date_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="21 мая в 18:36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toBottomOf="@+id/title_news" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="news"
        tools:layout_editor_absoluteY="731dp" />


</androidx.constraintlayout.widget.ConstraintLayout>